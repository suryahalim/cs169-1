<p id="notice"><%= notice %></p>

<h1>Listing Carts</h1>

<table>
  <thead>
    <tr>
      <th> ID </th>
      <th>Cust</th>
      <th>Rest</th>
      <th>Version</th>
      <th>Menu</th>
      <th>Qty</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @carts.each do |cart| %>
      <tr>
        <td><%= cart.id %> </td>
        <td><%= cart.cust_id %></td>
        <td><%= cart.rest_id %></td>
        <td><%= cart.version %></td>
        <td><%= cart.menu_id %></td>
        <td><%= cart.qty %></td>
        <td><%= link_to 'Show', cart %></td>
        <td><%= link_to 'Edit', edit_cart_path(cart) %></td>
        <td><%= link_to 'Destroy', cart, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
    <tr>
      <br>
      <th>Cust</th>
      <th>Rest</th>
      <th>Count</th>
      <th colspan="3"></th>
    </tr>
      <% Version.all.each do |version| %>
      <tr>
        <td><%= version.cust_id %></td>
        <td><%= version.rest_id %></td>
        <td><%= version.count %></td>
        <td><%= link_to 'Show', version %></td>
        <td><%= link_to 'Edit', edit_version_path(version) %></td>
        <td><%= link_to 'Destroy', version, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>

  </tbody>
</table>

<br>

