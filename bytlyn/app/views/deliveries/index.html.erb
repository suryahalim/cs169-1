<p id="notice"><%= notice %></p>

<h1>Listing Deliveries</h1>

<table>
  <thead>
    <tr>
      <th>Phone</th>
      <th>Rest</th>
      <th>Version</th>
      <th>User</th>
      <th>Address</th>
      <th>Total</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @deliveries.each do |delivery| %>
      <tr>
        <td><%= delivery.phone %></td>
        <td><%= delivery.rest_id %></td>
        <td><%= delivery.version %></td>
        <td><%= delivery.user_id %></td>
        <td><%= delivery.address %></td>
        <td><%= delivery.total %></td>
        <td><%= link_to 'Show', delivery %></td>
        <td><%= link_to 'Edit', edit_delivery_path(delivery) %></td>
        <td><%= link_to 'Destroy', delivery, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

