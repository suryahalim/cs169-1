<p id="notice"><%= notice %></p>

<h1>Listing Waitlists</h1>
<%= waitlist_error_messages! %>
<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% if not @lists.empty? %>
        <tr>
            <th><%= link_to 'Show', waitlist %></th>
            <th><%= link_to 'Edit', edit_waitlist_path(waitlist) %></th>
            <th><%= link_to 'Destroy', waitlist, method: :delete, data: { confirm: 'Are you sure?' } %></th>
          </tr>

        <% @lists.each do |@list| %>
            <tr>
              <td>
                <% name = Users.find_by(id: @list.cust_id).name %>
                <%= name %>
              </td>
              <td>
                <%= @list.people %>
              </td>
              <td>
                <%= @list.people %>
              </td>
              <td>
                <%= link_to 'Delete', waitlist, method: :delete, data: { confirm: 'Are you sure?' } %>
              </td>
            </tr>
        <% end %>
    <%else %>
        you have no current waitlist
    <%end %>
  </tbody>
</table>

<br>

