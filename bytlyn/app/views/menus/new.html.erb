<body class="signup">
<main>
    <div class="container">
        <div class="row">
            <div class="col-xs-12 col-sm-offset-3 col-sm-6 col-md-offset-4 col-md-4 col-lg-offset-4 col-lg-4">
              
                <div class="error"><%= params[:erros] %></div><br>
                <% @menu.errors.each do |error| %>
                  <div class="alert alert-danger">
                    <%= error %>
                  </div>
                <%end%>
              <h1>Add New Menu</h1>
              <% @menu.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>

              <%= form_for @menu do |f| %>
              <p>
                <span class="info">Menu Name</span>
                <%= f.text_field :name,  size: "24x6", required: true, :maxlength => 50, :class => "modern" %>
              </p>
              <p>
                <span class="info">Description</span>
                <%= f.text_field :description, required: true, :maxlength => 50, :class => "modern" %>
              </p>
              <p>
                <span class="info">Price</span>
                <%= f.text_field :price, required: true, :type => 'number', :step => '0.01', :value => '0.00', :min => '0', :class => "modern" %>
              </p>
              <p>
                <span class="info">Picture <i>(square photo please!)</i></span>
                <%= f.file_field :avatar, :class => "modern" %>
              </p>
	              <%= f.hidden_field :rest_id, :value => current_user.id %>
                <%= f.submit "Create menu", :class => "btn btn-bytlyn btn-max"%>
              <% end %>

              </div>
        </div>
    </div>
</main>


